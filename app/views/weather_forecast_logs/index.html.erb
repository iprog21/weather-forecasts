<h1 class="mt-4 pb-4 border-bottom">Weather Forecast Logs</h1>
<div class="row">
	<div class="col-lg-12">
		<%= form_tag(search_by_location_weather_forecast_logs_path, class: 'row mt-2 mb-2') do %>
				<div class="col-lg-10">
					<%= select_tag :country, options_for_select(CS.countries.map { |country| [country.second, country.second] }), prompt: "Select a country", required: true, class: 'form-control' %>
				</div>
				<div class="col-lg-2">
					<%= submit_tag "Search", class: 'btn btn-primary' %>
				</div>
		<% end %>

		<table class="table table-bordered table-striped table-compact">
			<thead>
				<tr>
					<th>Location Name</th>
					<th>Latitude</th>
					<th>Longitude</th>
					<th>Elevation</th>
					<th>Created At</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<%= render @weather_forecast_logs %>
			</tbody>
		</table>
	</div>
	<% if @weather_forecast_log.present? %>
		<div class="col-lg-12">
			<h4 class="border-top pt-4 text-primary g-3">
					Weather Forecast Chart - <%= @weather_forecast_log.display_title %>
					<%= link_to 'Clear', weather_forecast_logs_path, class: 'btn btn-danger' %>
			</h4>
			<%= line_chart(@weather_forecast_chart_data,  xtitle: "Time", ytitle: "Temparature 2m", points: false) %>
		</div>
	<% end %>
</div>
